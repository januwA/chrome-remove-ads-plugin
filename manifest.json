{
  "manifest_version": 2,
  "name": "RemoveADS",
  "version": "0.0.1",
  "description": "屏蔽广告",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/utils.js"
      ]
    },
    {
      "matches": [
        "*://*.3dmgame.com/*"
      ],
      "js": [
        "js/3dmgame.js"
      ]
    },
    {
      "matches": [
        "*://*.nicotv.club/*"
      ],
      "js": [
        "js/nicotv.js"
      ]
    },
    {
      "matches": [
        "*://*.pcgamestorrents.com/*"
      ],
      "js": [
        "js/pcgamestorrents.js"
      ]
    },
    {
      "matches": [
        "*://*.desktophut.com/*"
      ],
      "js": [
        "js/desktophut.js"
      ]
    },
    {
      "matches": [
        "*://*.bilibili.com/*"
      ],
      "js": [
        "js/bilibili.js"
      ]
    },
    {
      "matches": [
        "*://*.torrents2download.com/*"
      ],
      "js": [
        "js/torrents2download.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "contextMenus",
    "storage"
  ]
}