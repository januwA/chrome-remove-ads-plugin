{
  "manifest_version": 2,
  "name": "RemoveADS",
  "version": "0.0.1",
  "description": "屏蔽广告",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/utils.js",
        "shared/msg.js"
      ]
    },
    {
      "matches": [
        "*://*.3dmgame.com/*"
      ],
      "js": [
        "content/3dmgame.js"
      ]
    },
    {
      "matches": [
        "*://*.nicotv.club/*"
      ],
      "js": [
        "content/nicotv.js"
      ]
    },
    {
      "matches": [
        "*://*.pcgamestorrents.com/*"
      ],
      "js": [
        "content/pcgamestorrents.js"
      ]
    },
    {
      "matches": [
        "*://*.desktophut.com/*"
      ],
      "js": [
        "content/desktophut.js"
      ]
    },
    {
      "matches": [
        "*://www.bilibili.com/*"
      ],
      "js": [
        "content/bilibili.js"
      ]
    },
    {
      "matches": [
        "*://*.torrents2download.com/*"
      ],
      "js": [
        "content/torrents2download.js"
      ]
    }
  ],
  "background": {
    "page": "background/index.html",
    "persistent": false
  },
  "browser_action": {
    "default_title": "config",
    "default_popup": "popup/index.html"
  },
  "permissions": [
    "tabs",
    "contextMenus",
    "storage"
  ]
}